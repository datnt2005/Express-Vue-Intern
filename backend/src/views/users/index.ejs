<% layout('layout') -%>
<form action="/logout" method="POST">
    <button class="btn btn-danger mb-3" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất không?')">Đăng xuất</button>
</form>
<% if (currentUser) { %>
  <p>Chào, <strong><%= currentUser.name %></strong>!</p>
<% } else { %>
  <p>Chưa đăng nhập.</p>
<% } %>

<h1>Danh sách người dùng</h1>
<a href="/users/create" class="btn btn-primary mb-3">Thêm người dùng</a>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Email</th><th>Hành động</th></tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
                <a href="/users/edit/<%= user.id %>" class="btn btn-warning btn-sm">Sửa</a>
                <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('Xóa thật hả đại ca?')">Xóa</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
